@model List<RandevuYonetimSistemi.Models.Entities.Service>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Hizmetler</h3>
    <a class="btn btn-primary" asp-action="Create">Yeni Hizmet</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Süre</th>
            <th>Ücret</th>
            <th>Aktif</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(s.Description))
                    {
                        @s.Description
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>
                <td>@s.DurationMinutes dk</td>
                <td>@s.Price ₺</td>
                <td>@(s.IsActive ? "Evet" : "Hayır")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@s.Id">Düzenle</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@s.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
