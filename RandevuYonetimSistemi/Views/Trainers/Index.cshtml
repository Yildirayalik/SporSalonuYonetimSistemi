@model List<RandevuYonetimSistemi.Models.Entities.Trainer>
@{
    ViewData["Title"] = "Antrenörler";
}

@if (TempData["Ok"] != null)
{
        <div class="alert alert-success">@TempData["Ok"]</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Antrenörler</h2>
    <a class="btn btn-primary" asp-action="Create">Yeni Antrenör</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Aktif</th>
            <th class="text-end"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.FullName</td>
                <td>@(t.Email ?? "—")</td>
                <td>@(t.Phone ?? "—")</td>
                <td>
                    @if (t.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </td>
                <td class="text-end">
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@t.Id">Düzenle</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@t.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
