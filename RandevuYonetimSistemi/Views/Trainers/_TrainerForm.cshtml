@model RandevuYonetimSistemi.Models.Entities.Trainer

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="mb-3">
    <label asp-for="FullName" class="form-label">Ad Soyad</label>
    <input asp-for="FullName" class="form-control" />
    <span asp-validation-for="FullName" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Email" class="form-label">Email</label>
    <input asp-for="Email" class="form-control" />
</div>

<div class="mb-3">
    <label asp-for="Phone" class="form-label">Telefon</label>
    <input asp-for="Phone" class="form-control" />
</div>

<div class="mb-3">
    <label asp-for="Bio" class="form-label">Hakkında</label>
    <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
</div>

<div class="form-check mb-3">
    <input asp-for="IsActive" class="form-check-input" />
    <label asp-for="IsActive" class="form-check-label">Aktif</label>
</div>
